@model Product

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="card-img-top img-fluid rounded">
            </div>
        </div>

        <div class="col-md-7">
            <h2 class="mb-3">@Model.Name</h2>
            <h4 class="text-danger font-weight-bold">@Model.Price.ToString("N0") VNĐ</h4>
            <p class="text-muted">Sản phẩm chất lượng, giá cả hợp lý!</p>

            <div class="mt-4">
                <a href="@Url.Action("AddToCart", "Cart", new { productId = Model.Id })" class="btn btn-success btn-lg">
                    🛒 Thêm vào giỏ
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg ml-3">
                    ⬅ Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
