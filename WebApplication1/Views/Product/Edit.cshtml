@model Product

<div class="container mt-4">
    <h2 class="text-center mb-4">✏️ Chỉnh sửa sản phẩm</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" asp-for="Name" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Giá</label>
            <input type="number" class="form-control" asp-for="Price" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Ảnh URL</label>
            <input type="text" class="form-control" asp-for="ImageUrl" required>
        </div>

        <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
